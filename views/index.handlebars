<div class="container article-container">
    <h3>Articles</h3>
    {{#each news}}
    <div class="card bg-light mb-3">
        <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <a href="{{link}}" class="card-link" target="_blank">Tech Articles</a>
            <p class="card-text">{{summary}}...</p>
            <a data-articleId={{_id}} class="btn btn-primary save-btn">Save article</a>
        </div>
    </div>
    {{/each}}
</div>